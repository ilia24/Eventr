<div class="chat_user">
  <div class="profile_thumbnail">
    <a href="<%=user_path(message.user.id)%>">
    <%= image_tag(message.user.avatar.thumb) %>
    </a>
  </div>
  <div class="side_menu_chat_name_msg">
    <div class="name_time">
      <% if message.user.eventrinfo != nil %>
        <h5><%= message.user.eventrinfo.first_name %> <%= message.user.eventrinfo.last_name %></h5>
      <% else %>
        <h5><%= message.user.email %> </h5>
      <% end %>
      <h5><%= message.timestamp %></h5>
    </div>
    <p><%= message.body %></p>
  </div>
</div>

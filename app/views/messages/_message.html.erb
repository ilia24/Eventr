<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <i><%= image_tag(message.user.avatar.thumb) %> </i>
          <span class="text-muted"> <%= message.user.eventrinfo.first_name %> <%= message.user.eventrinfo.last_name %> at <%= message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>


<% if current_user %>
  <% if User.find(session[:user_id]).eventrinfo ==nil  %>
    <div class="dropdown_menu_mobile">
      <div class="profile_thumbnail">
        <%= image_tag(current_user.avatar, :class=>"dropbtn") %>
      </div>
        <%= link_to 'Complete your profile', new_user_eventrinfo_path(session[:user_id]),:id=> "dropdown_profile_link" %>
        <%= link_to 'Message', users_path %>
        <%= link_to 'Log Out', session_path("current"), :method => :delete%>
    <%else%>

    <div class="dropdown_menu_mobile">
      <div class="profile_thumbnail">
        <%= image_tag(current_user.avatar, :class=>"dropbtn") %>
      </div>
        <%= link_to "#{current_user.eventrinfo.first_name}", (user_path(session[:user_id])), :id=> "dropdown_profile_link" %>
        <%= link_to 'Message', users_path %>
        <%= link_to 'Log Out', session_path("current"), :method => :delete%>
    </div>
    <% end %>
  <% else %>
  <%= link_to 'LOG IN', new_session_path %> <%= link_to 'SIGN UP', new_user_path %>
  <%end%>

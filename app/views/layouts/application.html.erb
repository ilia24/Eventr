<!DOCTYPE html>
<html>
  <head>
    <title>Eventr</title>
    <%= action_cable_meta_tag %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCicAETBLou3SdGkO9emwhptyQWfSD6Sp0"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/android-chrome-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="/mstile-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <%= stylesheet_link_tag "owl.carousel" %>
    <%= stylesheet_link_tag "owl.theme.default.min" %>

  </head>

  <!-- NAVIGATION BAR -->

  <nav>

    <div class="logo">
      <a href="/"><%= image_tag ("eventr-logo.svg"), :class=>"eventr_home_btn"%></a>
    </div>

    <div class="logo_sm">
      <%= image_tag ("eventr-logo-sm.svg"), :class=>"eventr_home_btn"%>
      <i class="fa fa-angle-up"></i>
    </div>

    <div class="nav_search_links">

      <div class="nav_search">
        <%= form_tag(events_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "SEARCH EVENTS" %>
        <%= image_tag ("ic_search_black_24px.svg") %>
        <% end %>
      </div>

      <div class="nav_links">

      <a href="/">HOME</a>
      <a href="/events">BROWSE</a>

        <% if current_user %>
          <% if User.find(session[:user_id]).eventrinfo ==nil  %>
            <div class="profile_thumbnail_wrapper">
              <div class="profile_thumbnail">
                <%= image_tag(current_user.avatar, :class=>"dropbtn") %>
              </div>
              <div id="myDropdown" class="dropdown-content">
                <%= image_tag("dropdown-arrow-01.svg") %>
                <%= link_to 'Complete your profile', new_user_eventrinfo_path(session[:user_id]),:id=> "dropdown_profile_link" %>
                <%= link_to 'Message', users_path %>
                <%= link_to 'Log Out', session_path("current"), :method => :delete%>
              </div>
            <%else%>
            <div class="profile_thumbnail_wrapper">
              <div class="profile_thumbnail">
                <%= image_tag(current_user.avatar, :class=>"dropbtn") %>
              </div>
              <div id="myDropdown" class="dropdown-content">
                <%= image_tag("dropdown-arrow-01.svg") %>
                <%= link_to "#{current_user.eventrinfo.first_name}", (user_path(session[:user_id])), :id=> "dropdown_profile_link" %>
                <%= link_to 'Message', users_path %>
                <%= link_to 'Log Out', session_path("current"), :method => :delete%>
              </div>
            </div>
            <% end %>
          <% else %>
          <%= link_to 'LOG IN', new_session_path %> <%= link_to 'SIGN UP', new_user_path %>
          <%end%>

      <div class="invis_temp">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>

    </div>

    </div>

  </nav>

  <div class="dropdown_mobile">
    <%= render 'layouts/dropdown' %>
  </div>

  <!-- SIDE MENU -->

  <!-- Chat button -->
  <div class="trigger_chat_btn_container">

    <div class="notification_count">
      <i class="fa fa-circle fa-lg"></i>
      <h6>
        <!-- Notification count code here (remove the '1')-->
        1
      </h6>
    </div>

    <div class="trigger_chat_btn">
      <i class="fa fa-comment fa-2x"></i>
    </div>

  </div>

  <div class="side_menu_wrapper">

    <div class="side_menu_container">

      <div class="side_menu_top_bar">
        <div class="side_menu_back_chat_container">
          <div class="side_menu_back_chat">
            <i class="fa fa-chevron-left"></i> Chat
          </div>
        </div>
        <div class="close_container">
          <div class="event_details_btn_container">

            <%= image_tag('eventr-logo-short.svg', :class=>"event_details_btn") %>
          </div>
          <i class="fa fa-close fa-lg" id="side_menu_close"></i>
        </div>
      </div>

      <!-- GROUP CONTENT CONTAINER -->
      <% if (@user != nil) && (@user.groups.empty? != true) %>
      <div class="side_menu_group_content">

        <div class="side_menu_group_event_details">
          <div class="side_menu_group_event_photo">
            <%= image_tag("home-slider/img-weeknd.jpg") %>
          </div>
        </div>

        <div class="side_menu_group_info">

          <h4><%= @user.groups.first.name %> </h4>

          <div class="side_menu_group_members">
            <h5><%= @user.groups.first.users.count %> EVENTRS GOING</h5>
          </div>

          <div class="side_menu_group_members_list">
            <% @user.groups.first.users.all.each do |u| %>
              <div class="profile_thumbnail">
                <%= image_tag(u.avatar.thumb) %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="side_menu_chat">
          <%= render "groups/sidebar_chat", g: @user.groups.first %>
        </div>
        <% if (@user != nil) && (@user.groups.empty? != true) %>
        <div class="side_menu_chat_input">
          <div class="map_icon_container">
            <i class="fa fa-map-marker fa-lg"></i>
          </div>
          <%= render "groups/sidebar_form", g: @user.groups.first %>
        </div>
        <% end %>

      </div>

      <!-- MAIN MENU -->
      <div class="side_menu_main_content">

        <!-- PENDING REQUEST -->

        <h5 id="pending">PENDING REQUESTS <i class="fa fa-chevron-up"></i></h5>

        <div class="side_menu_main_pending">
          <% if @user.members.empty? != true %>
          <% @user.members.each do |m| %>
            <%  if (m.owner == true) && (m.group.invited_users.empty? != true) %>

                <% m.group.invited_users.each do |i| %>

                    <div class="request_pending_container">

                      <div class="profile_thumbnail">
                        <%= image_tag(i.avatar.thumb) %>
                      </div>

                      <div class="request_pending_info">

                        <%= i.eventrinfo.first_name %> <%= i.eventrinfo.last_name %>
                        <p>wants to join <strong><%= m.group.name %></strong></p>
                        <div class="accept_reject">
                          <div class="button_sm">
                            <%= link_to 'Accept', accept_request_path(@event.id, id: m.group.id, request_id: i.request_ids) %>
                          </div>
                          <div class="button_sm_outline_black">
                            <%= link_to 'Reject', reject_request_path(@event.id, id: m.group.id, request_id: i.request_ids) %>
                          </div>
                        </div>
                      </div>

                    </div>

                <% end %>
            <% end %>
          <% end %>
          <% end %>
        </div>

        <!-- GROUPS SECTION -->
        <div class="side_menu_main_groups">

          <h5 id="groups">GROUPS <i class="fa fa-chevron-up"></i></h5>

          <div class="side_menu_main_groups_list">
            <% @user.groups.each do |g| %>

              <%=link_to event_group_url(g.event.id, g.id), class: 'grouplink' do %>
                <div class="side_menu_main_groups_item">
                  <div class="profile_thumbnail">
                    <%= image_tag(g.event.picurl3) %>
                  </div>
                  <div class="main_menu_group_content">
                    <h4><%= g.name %></h4>
                    <h6><%= g.users.count %> EVENTRS</h6>
                  </div>
                </div>
              <% end %>

            <% end %>
          </div>

        </div>


        <% end %>
        <!-- EVENTRS SECTION -->

        <div class="side_menu_main_eventrs">
          <h5 id="eventrs">EVENTRS <i class="fa fa-chevron-up"></i></h5>
          <% if (@user != nil) && (@user.authored_conversations != nil) %>
          <% @user.authored_conversations.all.each do |c| %>
          <div class="side_menu_main_eventrs_list">
            <div class="side_menu_main_eventrs_item">
            <div class="profile_thumbnail">
              <%= image_tag(c.with(current_user).avatar.thumb) %>
            </div>
            <div class="side_menu_chat_name_msg">
              <div class="name_time">

                <% if c.with(current_user).eventrinfo != nil %>

                <%=link_to link_to conversation_path(c.id) do %>
                <h5><%= c.with(current_user).eventrinfo.first_name %> <%= c.with(current_user).eventrinfo.last_name %></h5>
                <em><%= c.personal_messages.last.body.truncate(50) %></em>
                <br>
                <em><%= c.personal_messages.last.created_at.strftime("%I: %M %p") %></em>
                <%end%>

                <% else %>
                <%=link_to conversation_path(c.id)do %>
                <%= c.with(current_user).email %>
                <em><%= c.personal_messages.last.body.truncate(50) %></em>
                <br>
                <em><%= c.personal_messages.last.created_at.strftime("%I: %M %p") %></em>
                <%end%>
                <%end%>
              </div>
            </div>
          </div>
          </div>
          <%end %>
          <%end%>
        </div>

      </div>

    </div>

  </div>

  <body>
    <%= yield %>

    <footer>
      <%= render 'layouts/footer' %>
    </footer>

  </body>



</html>

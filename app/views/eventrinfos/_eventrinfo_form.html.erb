<%= form_for ([@user, @eventrinfo]) do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label :about_you %>
<%= f.text_field :bio %>

<p>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
</p>


<%= f.submit 'Update profile' %>

<%end%>

<div class="carousel_container">
  <div class="carousel">
    <div class="carousel_item"><%= image_tag ("home-slider/dance-contemp.jpeg") %></div>
    <div class="carousel_item"><%= image_tag ("home-slider/img-weeknd.jpg") %></div>
    <div class="carousel_item"><%= image_tag ("home-slider/john-legend-1.jpg") %></div>
  </div>
</div>

<main class="index_main">
  <h2>happening near you</h2>

  <ul id="events_near_you">
    <% @events.each do |current_event| %>
    <li class="event_container">
      <%= render 'index_event', event: current_event %>
    </li>
    <% end %>
  </ul>
</main>

<div class="new_group_form_container">

  <%= form_for ([@event, @group]) do |f| %>

  <div class="close_container">
    <i class="fa fa-close fa-2x" id="closegroupform" href=""></i>
  </div>

  <div class="form_content">

    <div class="form_field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form_field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="form_field">
     <%= f.label :privacy_setting %>
      <%= f.check_box :private %>
      <%= "Check to make the privacy of the group private" %>
    </div>

    <div class="event_going">
      <%= f.submit 'create group' %>
    </div>

    <%end%>

  </div>

</div>

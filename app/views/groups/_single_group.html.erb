<div class="groups_content">
<h1><%= link_to g.name, event_group_path(@event, g.id) %></h1>

<p> <%= g.description %> </p>

<ul>
  <% g.users.each do |u| %>
    <li class="profile_member"> <%= image_tag(u.avatar.thumb) %> </li>
    <% end %>
</ul>
</div>

<%= link_to 'New chat room', new_event_group_chat_room_path(group_id: g.id, event_id: @event.id), class: 'btn btn-primary' %>



<div class="event_going">
  <h6> <strong><%= g.users.count %></strong> EVENTRS </h6>

  <% if g.users.include? current_user %>
    <%= button_to "Leave group", leave_group_path(@event, g.id), :method => "get", :class => "button_sm" %>
  <% else %>
    <%= button_to "Join", join_group_path(@event, g.id), :method => "get", :class => "button_sm" %>
  <%end%>

</div>
